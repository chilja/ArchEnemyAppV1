<RelativeLayout 
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:padding="5dp"
	android:background="@android:color/transparent">
	 	
	<ImageView 
        android:id="@+id/imageView"	 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:minHeight="100dp"
        android:maxHeight="200dp"
	    android:padding="5dp"/>
	
	<TextView
	    android:id="@+id/messageView"
	    style="@style/NewsContent"
		android:layout_marginBottom="5dp"
		android:layout_below="@+id/imageView">
	</TextView>
	
	<ImageView 
        android:id="@+id/providerIconView"
        style="@style/Icon"
        android:src="@drawable/facebook"
        android:layout_below="@+id/messageView"/>

	<TextView
		android:id="@+id/userView"
	    style="@style/User"
   		android:layout_below="@+id/messageView"
   		android:layout_toRightOf="@+id/providerIconView">
	</TextView>
	
	<ImageView 
        android:id="@+id/iconView"
        style="@style/ArchEnemyIcon"
        android:layout_below="@+id/messageView"
        android:layout_toRightOf="@+id/userView"/>
	
	<TextView
		android:id="@+id/dateView"
		style="@style/Timestamp"
   		android:layout_below="@+id/messageView"
   		android:layout_toRightOf="@+id/iconView">
	</TextView>
	
	
</RelativeLayout>