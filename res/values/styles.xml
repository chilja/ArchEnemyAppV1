<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Text" >        
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    
    <style name="Text.Micro" >        
        <item name="android:textSize">12sp</item>
    </style>
       
    <style name="Text.Small" >        
        <item name="android:textSize">14sp</item>
    </style>
    
    <style name="Text.Medium" >        
        <item name="android:textSize">16sp</item>
    </style>
    
    <style name="ShareText" parent="Text.Small">        
        <item name="android:layout_margin">4dp</item>
    </style>
    
    <style name="LoginHeader" parent="Text.Medium">        
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
    </style>
      
    <style name="NewsContent" parent="Text.Medium">        
        <item name="android:maxLines">25</item>
        <item name="android:gravity">center</item>
    </style>
    
    <style name="UserName" parent="Text.Medium">        
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>
    
    <style name="SubText" parent="Text.Small">        
        <item name="android:gravity">center</item>
    </style>
    
    <style name="Timestamp" parent="Text.Small">        
        <item name="android:textColor">@color/lightgrey</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">bottom|center</item>
    </style> 
    
    <style name="TitleStrip" parent="Text.Medium">        
        <item name="android:singleLine">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>
    
    <style name="Image">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">150dp</item>
        <item name="android:gravity">center</item>
    </style>
    
    <style name="FacebookLogo">
        <item name="android:src">@drawable/com_facebook_logo</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>       
        <item name="android:layout_gravity">top|center_horizontal</item>
        <item name="android:gravity">top|center_horizontal</item>
    </style>
    
    <style name="FacebookLogo.Small">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">60dp</item>
    </style>
    
    <style name="ProfilePicture">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">12dp</item>
    </style>
    
    <style name="Icon">
        <item name="android:layout_width">16dp</item>
        <item name="android:layout_height">16dp</item>
        <item name="android:gravity">right</item>
    </style>
    
    <style name="MenuIcon">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:gravity">right</item>
    </style>
    
    <style name="ArchEnemyIcon">
        <item name="android:layout_width">15dp</item>
        <item name="android:layout_height">15dp</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:gravity">bottom</item>
        <item name="android:src">@drawable/ic_menu</item>
    </style>
    
    <style name="List">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:divider">@color/red</item>
        <item name="android:dividerHeight">1sp</item>
        <item name="android:choiceMode">singleChoice</item>
    </style>  
    
    <style name="LoginButton">
    	<item name="android:layout_width">220dp</item>
        <item name="android:layout_height">wrap_content</item>
    	<item name="android:layout_gravity">bottom|center_horizontal</item>
    	<item name="android:gravity">center</item>
    	<item name="android:layout_margin">5dp</item>
    	<item name="android:layout_alignParentBottom">true</item>
    	<item name="android:layout_centerHorizontal">true</item>
    	<item name="android:textSize">16sp</item>
    	<item name="android:textStyle">bold</item>
    </style>
         
</resources>
